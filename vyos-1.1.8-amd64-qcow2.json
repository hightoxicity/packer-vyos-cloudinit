{
  "builders": [{
    "name": "qemu-qcow2",
    "type": "qemu",
    "iso_url": "{{user `mirror`}}/iso/release/1.1.8/vyos-1.1.8-amd64.iso",
    "iso_checksum": "{{user `iso_checksum`}}",
    "iso_checksum_type": "{{user `iso_checksum_type`}}",
    "output_directory": "output-qemu-qcow2",
    "vm_name": "vyos-qcow2",
    "net_device": "virtio-net",
    "disk_interface": "virtio",
    "disk_compression": true,
    "disk_size": "{{user `disk_size`}}",
    "format": "qcow2",
    "headless": "{{user `headless`}}",
    "accelerator": "kvm",
    "boot_wait": "5s",
    "boot_command": [
      "<enter><wait10><wait10>",
      "vyos<enter><wait>",
      "vyos<enter><wait>",
      "install system<enter><wait>",
      "<enter><wait>",
      "<enter><wait>",
      "<enter><wait>",
      "Yes<enter><wait>",
      "<enter><wait10><wait10><wait10><wait10><wait10>",
      "<enter><wait>",
      "vyos<enter><wait>",
      "vyos<enter><wait>",
      "<enter><wait5>",
      "reboot<enter><wait>",
      "Yes<enter><wait10><wait10><wait10><wait10>",
      "vyos<enter><wait>",
      "vyos<enter><wait>",
      "configure<enter><wait>",
      "set interfaces ethernet eth0 address dhcp<enter><wait>",
      "set system login user vyos authentication plaintext-password vyos<enter><wait>",
      "set system login user vyos level admin<enter><wait>",
      "set service ssh<enter><wait>",
      "commit<enter><wait>",
      "save<enter><wait>",
      "exit<enter><wait>",
      "exit<enter><wait5>",
      "vyos<enter><wait>",
      "vyos<enter><wait>",
      "configure<enter><wait>",
      "commit<enter><wait>",
      "save<enter><wait>",
      "exit<enter><wait>"
    ],
    "ssh_timeout": "{{user `ssh_timeout`}}",
    "ssh_username": "vyos",
    "ssh_password": "vyos",
    "ssh_host_port_min": 3215,
    "ssh_host_port_max": 3216,
    "ssh_port": 22,
    "shutdown_command": "sudo poweroff",
    "qemuargs": [
      ["-m", "{{user `memory`}}"],
      ["-smp", "{{user `cpus`}}"],
      ["-netdev", "user,id=user.0,hostfwd=tcp::3215-:22,hostfwd=tcp::3216-:22,net=10.0.2.0/24"],
      ["-device", "virtio-net,netdev=user.0"],
      ["-netdev", "user,id=user.1"],
      ["-device", "virtio-net,netdev=user.1"],
      ["-netdev", "user,id=user.2"],
      ["-device", "virtio-net,netdev=user.2"],
      ["-netdev", "user,id=user.3"],
      ["-device", "virtio-net,netdev=user.3"]
    ]
  }],
  "provisioners": [{
    "type": "shell",
    "scripts": [
      "scripts/vyos/repo.sh",
      "scripts/vyos/init.sh",
      "scripts/vyos/cloudinit.sh",
      "scripts/vyos/sshd.sh",
      "scripts/vyos/confpermissions.sh",
      "scripts/vyos/cleanup.sh",
      "scripts/vyos/minimize.sh"
    ],
    "environment_vars": [
      "vagrant_user={{user `vagrant_user`}}"
    ]
  }],
  "variables": {
    "compression_level": "6",
    "cpus": "1",
    "disk_size": "8000",
    "headless": "true",
    "iso_checksum": "ff4c8e1822e653d8d85f4a90f30c6d2ac047514c",
    "iso_checksum_type": "sha1",
    "memory": "512",
    "mirror": "http://mirror.vyos.net",
    "ssh_timeout": "60m",
    "vagrant_user": "0"
  }
}
